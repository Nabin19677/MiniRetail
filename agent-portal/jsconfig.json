{
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@styles/*": ["src/styles/*"],
      "@layout/*": ["src/layout/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["src/assets/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "exclude": ["node_modules"]
}
